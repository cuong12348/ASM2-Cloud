<!DOCTYPE html>
<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/CSS/styles.css" />
    <title>Admin |<%= title %> </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
  </head>

  <body>
    <!-- Sidebar -->
      <div class="sidebar">
        <section style="text-align: center" id="sidebar">
        <a href="#" class="brand">
          <span class="text">TOYS STORES </span>
            </a> 
        </section>	
        
        <ul class="side-menu">
          <li>
            <a href="#"><i class="bx bxs-dashboard"></i>Dashboard</a>
          </li>
          <li>
            <a href="#"><i class="bx bx-cart"></i>Products</a>
          </li>
          <li>
            <a href="#"><i class="bx bx-user"></i>Customers</a>
          </li>
          <li>
            <a href="#"><i class="bx bxs-cog"></i>Settings</a>
          </li>
        </ul>
    </div>
    <!-- End of Sidebar -->

    <!-- Main Content -->
    <div class="content">
      <!-- Navbar -->
      <nav>
        <i class="bx bx-menu"></i>
        <form action="#">
          <div class="form-input">
            <input type="search" placeholder="Search..." />
            <button class="search-btn" type="submit">
              <i class="bx bx-search"></i>
            </button>
          </div>
        </form>
        <a href="#" class="notif">
          <i class="bx bx-bell"></i>
          <span class="count">12</span>
        </a>
        <a href="#" class="profile">
          <img src="/images/toystore.png" />
        </a>
      </nav>

      <!-- End of Navbar -->

      <main>
        <div class="bottom-data">
          <div class="orders">
            <div class="header">
              <h4 class="card-title">Product List</h4>
            </div>
            <div class="row">
              <div class="col-md-12 mb-3">
                <a class="btn btn-success" href="/Product/create">
                  <i class="bi bi-plus-circle"></i> Add new Product
                </a>
              </div>
            </div>
            <table>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Product Name</th>
                  <th>Picture</th>
                  <th>Price</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% if (Product.length > 0) { %>
                  <% Product.forEach(Product => { %>
                <tr onclick="edit(this)">
                  <td><%= Product.ProductID %></td>
                  <td><%= Product.ProductName %></td>
                  <td></td>
                  <td><%= Product.Price %></td>
                  <td>
                    <a href="/Product/edit/<%=Product._id %>" type="button" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Product/delete/<%= Product._id %>" type="button" class="btn btn-primary btn-sm">Delete</a>
                  </td>
                </tr>
                <% }) %>
                <% } else { %>
                  <p>There are no product to display...</p>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </main>
    </div>
    <script src="index.js"></script>
    <link rel="stylesheet" href="style.css" />
    <%- include('./partials/footer.ejs') %>
  </body>
</html>


